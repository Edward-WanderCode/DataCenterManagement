<Window
    x:Class="DataCenterManagement.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:viewmodels="clr-namespace:DataCenterManagement.ViewModels"
    xmlns:views="clr-namespace:DataCenterManagement.Views"
    x:Name="Main"
    Title="Phần mềm quản lý trực NOC"
    Width="1500"
    Height="800"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!--  Style cho TabItem  -->
        <Style
            x:Key="CustomTabItem"
            BasedOn="{StaticResource MaterialDesignTabItem}"
            TargetType="TabItem">
            <Setter Property="Height" Value="48" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="221*" />
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="1259*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <materialDesign:ColorZone
            Grid.ColumnSpan="3"
            Padding="16"
            VerticalAlignment="Center"
            Mode="PrimaryMid">
            <DockPanel>
                <materialDesign:PackIcon
                    Width="32"
                    Height="32"
                    VerticalAlignment="Center"
                    DockPanel.Dock="Left"
                    Kind="Application" />
                <TextBlock
                    Margin="16,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="HỆ THỐNG QUẢN LÝ" />
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <Button
                        Margin="8,0"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Cài đặt">
                        <materialDesign:PackIcon Foreground="#FF170909" Kind="Settings" />
                    </Button>
                    <Button
                        Margin="8,0"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Trợ giúp">
                        <materialDesign:PackIcon Foreground="Black" Kind="Help" />
                    </Button>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>

        <!--  Main TabControl  -->
        <TabControl
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.ColumnSpan="3"
            Margin="0,0,0,46"
            materialDesign:ColorZoneAssist.Mode="PrimaryMid"
            Style="{StaticResource MaterialDesignFilledTabControl}"
            TabStripPlacement="Top">

            <!--  Tab: Thông tin ca trực  -->
            <TabItem Header="THÔNG TIN CA TRỰC" Style="{StaticResource CustomTabItem}">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <materialDesign:Card
                        Grid.Row="0"
                        Margin="0,0,0,16"
                        Padding="16">
                        <WrapPanel>
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,16"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Text="Thông tin ca trực" />
                                <WrapPanel>
                                    <Calendar
                                        x:Name="Calendar_LichTruc"
                                        Width="280"
                                        SelectedDate="{Binding NgayTruc}"
                                        SelectedDatesChanged="Calendar_LichTruc_SelectedDatesChanged"
                                        SelectionMode="SingleDate" />
                                    <StackPanel
                                        Margin="10"
                                        VerticalAlignment="Center"
                                        TextBlock.FontSize="16">
                                        <ComboBox
                                            x:Name="CboxCaTruc"
                                            Width="320"
                                            Height="60"
                                            Margin="10"
                                            materialDesign:HintAssist.Hint="Ca trực" />
                                        <ComboBox
                                            Width="320"
                                            Height="60"
                                            Margin="10"
                                            materialDesign:HintAssist.Hint="Cán bộ trực"
                                            DisplayMemberPath="HoTen"
                                            ItemsSource="{Binding CanBoList}"
                                            SelectedValue="{Binding SelectedCanBoId, Mode=TwoWay}"
                                            SelectedValuePath="IdCanBo" />
                                        <ComboBox
                                            Width="320"
                                            Height="60"
                                            Margin="10"
                                            materialDesign:HintAssist.Hint="Cán bộ trực ca tiếp theo"
                                            DisplayMemberPath="HoTen"
                                            ItemsSource="{Binding CanBoList}"
                                            SelectedValue="{Binding SelectedNextCanBoId, Mode=TwoWay}"
                                            SelectedValuePath="IdCanBo" />
                                    </StackPanel>
                                </WrapPanel>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,16"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Text="Lịch trực tuần" />
                                <views:LichTrucView Width="746" />
                            </StackPanel>
                        </WrapPanel>
                    </materialDesign:Card>
                </Grid>
            </TabItem>

            <!--  Tab: Tình hình chung  -->
            <TabItem Header="TÌNH HÌNH CHUNG" Style="{StaticResource CustomTabItem}">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Margin="0,0,0,16"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="Báo cáo tình hình chung" />

                    <materialDesign:Card
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,0,8,0"
                        Padding="16">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,16"
                                FontWeight="Bold"
                                Text="Biểu đồ thống kê" />
                            <!--  Placeholder cho biểu đồ  -->
                            <Border
                                Height="300"
                                Background="LightGray"
                                CornerRadius="4">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="Biểu đồ sẽ được hiển thị tại đây" />
                            </Border>
                        </StackPanel>
                    </materialDesign:Card>

                    <materialDesign:Card
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="8,0,0,0"
                        Padding="16">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,16"
                                FontWeight="Bold"
                                Text="Thông tin tổng quan" />
                            <StackPanel Margin="12">
                                <Border
                                    Padding="16"
                                    Background="{DynamicResource PrimaryHueMidBrush}"
                                    CornerRadius="4">
                                    <StackPanel Orientation="Horizontal" TextElement.Foreground="White">
                                        <materialDesign:PackIcon
                                            Width="24"
                                            Height="24"
                                            Margin="0,0,12,0"
                                            Kind="Account" />
                                        <StackPanel>
                                            <TextBlock FontSize="12" Text="Tổng số nhân viên" />
                                            <TextBlock
                                                FontSize="18"
                                                FontWeight="Bold"
                                                Text="156" />
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <Border
                                    Padding="16"
                                    Background="{DynamicResource SecondaryHueMidBrush}"
                                    CornerRadius="4">
                                    <StackPanel Orientation="Horizontal" TextElement.Foreground="White">
                                        <materialDesign:PackIcon
                                            Width="24"
                                            Height="24"
                                            Margin="0,0,12,0"
                                            Kind="ClockOutline" />
                                        <StackPanel>
                                            <TextBlock FontSize="12" Text="Ca trúc hiện tại" />
                                            <TextBlock
                                                FontSize="18"
                                                FontWeight="Bold"
                                                Text="Ca sáng" />
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>
            </TabItem>

            <!--  Tab: GSMT, ĐHCX, đánh giá  -->
            <TabItem Header="GSMT, ĐHCX, ĐIỆN" Style="{StaticResource CustomTabItem}">
                <Grid Margin="20">
                    <TabControl Style="{StaticResource MaterialDesignTabControl}" TabStripPlacement="Left">
                        <TabItem Header="GSMT">
                            <materialDesign:Card Margin="16" Padding="20">
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,16"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Text="Giám sát môi trường" />
                                    <DataGrid Height="400" Style="{StaticResource MaterialDesignDataGrid}">
                                        <!--  Columns sẽ được định nghĩa trong code-behind  -->
                                    </DataGrid>
                                </StackPanel>
                            </materialDesign:Card>
                        </TabItem>
                        <TabItem Header="ĐHCX">
                            <materialDesign:Card Margin="16" Padding="20">
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,16"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Text="Điều hòa chính xác" />
                                    <DataGrid Height="400" Style="{StaticResource MaterialDesignDataGrid}">
                                        <!--  Columns sẽ được định nghĩa trong code-behind  -->
                                    </DataGrid>
                                </StackPanel>
                            </materialDesign:Card>
                        </TabItem>
                        <TabItem Header="PDU">
                            <materialDesign:Card Margin="16" Padding="20">
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,16"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Text="Bảng giá trị" />
                                    <DataGrid Height="400" Style="{StaticResource MaterialDesignDataGrid}">
                                        <!--  Columns sẽ được định nghĩa trong code-behind  -->
                                    </DataGrid>
                                </StackPanel>
                            </materialDesign:Card>
                        </TabItem>
                        <TabItem Header="MSB">
                            <materialDesign:Card Margin="16" Padding="20">
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,16"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Text="Bảng giá trị" />
                                    <DataGrid Height="400" Style="{StaticResource MaterialDesignDataGrid}">
                                        <!--  Columns sẽ được định nghĩa trong code-behind  -->
                                    </DataGrid>
                                </StackPanel>
                            </materialDesign:Card>
                        </TabItem>
                        <TabItem Header="UPS">
                            <materialDesign:Card Margin="16" Padding="20">
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,16"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Text="Bảng giá trị" />
                                    <DataGrid Height="400" Style="{StaticResource MaterialDesignDataGrid}">
                                        <!--  Columns sẽ được định nghĩa trong code-behind  -->
                                    </DataGrid>
                                </StackPanel>
                            </materialDesign:Card>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>

            <!--  Tab: Lỗi hệ thống CNTT  -->
            <TabItem Header="LỖI HỆ THỐNG CNTT" Style="{StaticResource CustomTabItem}">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <materialDesign:Card
                        Grid.Row="0"
                        Margin="0,0,0,16"
                        Padding="16">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,16"
                                FontSize="18"
                                FontWeight="Bold"
                                Text="Quản lý lỗi hệ thống CNTT" />
                            <WrapPanel>
                                <Button Margin="0,0,8,8" Style="{StaticResource MaterialDesignRaisedButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Margin="0,0,8,0" Kind="BugReport" />
                                        <TextBlock Text="Báo cáo lỗi" />
                                    </StackPanel>
                                </Button>
                                <Button Margin="0,0,8,8" Style="{StaticResource MaterialDesignOutlinedButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Margin="0,0,8,0" Kind="Wrench" />
                                        <TextBlock Text="Sửa chữa" />
                                    </StackPanel>
                                </Button>
                                <ComboBox
                                    MinWidth="150"
                                    Margin="8,0"
                                    materialDesign:HintAssist.Hint="Lọc theo mức độ">
                                    <ComboBoxItem Content="Tất cả" />
                                    <ComboBoxItem Content="Cao" />
                                    <ComboBoxItem Content="Trung bình" />
                                    <ComboBoxItem Content="Thấp" />
                                </ComboBox>
                            </WrapPanel>
                        </StackPanel>
                    </materialDesign:Card>

                    <DataGrid
                        Grid.Row="1"
                        AutoGenerateColumns="False"
                        Style="{StaticResource MaterialDesignDataGrid}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="100"
                                Binding="{Binding MaLoi}"
                                Header="Mã lỗi" />
                            <DataGridTextColumn
                                Width="300"
                                Binding="{Binding MoTa}"
                                Header="Mô tả" />
                            <DataGridTextColumn
                                Width="100"
                                Binding="{Binding MucDo}"
                                Header="Mức độ" />
                            <DataGridTextColumn
                                Width="120"
                                Binding="{Binding NgayPhatHien}"
                                Header="Ngày phát hiện" />
                            <DataGridTextColumn
                                Width="120"
                                Binding="{Binding TrangThai}"
                                Header="Trạng thái" />
                            <DataGridTextColumn
                                Width="150"
                                Binding="{Binding NguoiXuLy}"
                                Header="Người xử lý" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!--  Tab: Quản lý CSHT  -->
            <TabItem Header="QUẢN LÝ CSHT" Style="{StaticResource CustomTabItem}">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <materialDesign:Card
                        Grid.Row="0"
                        Margin="0,0,0,16"
                        Padding="16">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,16"
                                FontSize="18"
                                FontWeight="Bold"
                                Text="Quản lý cơ sở hạ tầng" />
                            <WrapPanel>
                                <Button Margin="0,0,8,8" Style="{StaticResource MaterialDesignRaisedButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Margin="0,0,8,0" Kind="Plus" />
                                        <TextBlock Text="Thêm thiết bị" />
                                    </StackPanel>
                                </Button>
                                <Button Margin="0,0,8,8" Style="{StaticResource MaterialDesignOutlinedButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Margin="0,0,8,0" Kind="Cog" />
                                        <TextBlock Text="Bảo trì" />
                                    </StackPanel>
                                </Button>
                                <Button Margin="0,0,8,8" Style="{StaticResource MaterialDesignOutlinedButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Margin="0,0,8,0" Kind="FileExport" />
                                        <TextBlock Text="Xuất báo cáo" />
                                    </StackPanel>
                                </Button>
                            </WrapPanel>
                        </StackPanel>
                    </materialDesign:Card>

                    <DataGrid
                        Grid.Row="1"
                        AutoGenerateColumns="False"
                        Style="{StaticResource MaterialDesignDataGrid}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="120"
                                Binding="{Binding MaThietBi}"
                                Header="Mã thiết bị" />
                            <DataGridTextColumn
                                Width="200"
                                Binding="{Binding TenThietBi}"
                                Header="Tên thiết bị" />
                            <DataGridTextColumn
                                Width="150"
                                Binding="{Binding LoaiThietBi}"
                                Header="Loại thiết bị" />
                            <DataGridTextColumn
                                Width="150"
                                Binding="{Binding ViTri}"
                                Header="Vị trí" />
                            <DataGridTextColumn
                                Width="120"
                                Binding="{Binding TrangThai}"
                                Header="Trạng thái" />
                            <DataGridTextColumn
                                Width="120"
                                Binding="{Binding NgayBaoTri}"
                                Header="Ngày bảo trì" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!--  Tab: Quản lý cán bộ  -->
            <TabItem Header="QUẢN LÝ CÁN BỘ" Style="{StaticResource CustomTabItem}">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <materialDesign:Card
                        Grid.Row="0"
                        Margin="0,0,0,16"
                        Padding="16">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,16"
                                FontSize="18"
                                FontWeight="Bold"
                                Text="Quản lý thông tin cán bộ" />
                            <WrapPanel>
                                <Button Margin="0,0,8,8" Style="{StaticResource MaterialDesignRaisedButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Margin="0,0,8,0" Kind="AccountPlus" />
                                        <TextBlock Text="Thêm cán bộ" />
                                    </StackPanel>
                                </Button>
                                <Button Margin="0,0,8,8" Style="{StaticResource MaterialDesignOutlinedButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Margin="0,0,8,0" Kind="AccountEdit" />
                                        <TextBlock Text="Chỉnh sửa" />
                                    </StackPanel>
                                </Button>
                                <TextBox
                                    MinWidth="200"
                                    Margin="16,0,8,8"
                                    materialDesign:HintAssist.Hint="Tìm kiếm cán bộ..." />
                                <Button Style="{StaticResource MaterialDesignIconButton}">
                                    <materialDesign:PackIcon Kind="Magnify" />
                                </Button>
                            </WrapPanel>
                        </StackPanel>
                    </materialDesign:Card>

                    <DataGrid
                        Grid.Row="1"
                        AutoGenerateColumns="False"
                        Style="{StaticResource MaterialDesignDataGrid}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="100"
                                Binding="{Binding MaCanBo}"
                                Header="Mã cán bộ" />
                            <DataGridTextColumn
                                Width="180"
                                Binding="{Binding HoTen}"
                                Header="Họ và tên" />
                            <DataGridTextColumn
                                Width="150"
                                Binding="{Binding ChucVu}"
                                Header="Chức vụ" />
                            <DataGridTextColumn
                                Width="150"
                                Binding="{Binding PhongBan}"
                                Header="Phòng ban" />
                            <DataGridTextColumn
                                Width="120"
                                Binding="{Binding SoDienThoai}"
                                Header="Số điện thoại" />
                            <DataGridTextColumn
                                Width="200"
                                Binding="{Binding Email}"
                                Header="Email" />
                            <DataGridTextColumn
                                Width="100"
                                Binding="{Binding TrangThai}"
                                Header="Trạng thái" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!--  Tab: Phân lịch trực  -->
            <TabItem Header="PHÂN LỊCH TRỰC" Style="{StaticResource CustomTabItem}">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Lịch trực  -->
                    <materialDesign:Card
                        Grid.Column="0"
                        Margin="0,0,8,0"
                        Padding="16">
                        <StackPanel>
                            <DockPanel Margin="0,0,0,16">
                                <TextBlock
                                    DockPanel.Dock="Left"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Text="Lịch trực tháng" />
                                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                    <Button Style="{StaticResource MaterialDesignIconButton}">
                                        <materialDesign:PackIcon Kind="ChevronLeft" />
                                    </Button>
                                    <TextBlock
                                        Margin="8,0"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Text="Tháng 12/2024" />
                                    <Button Style="{StaticResource MaterialDesignIconButton}">
                                        <materialDesign:PackIcon Kind="ChevronRight" />
                                    </Button>
                                </StackPanel>
                            </DockPanel>

                            <Calendar
                                x:Name="LichTrucCalendar"
                                FirstDayOfWeek="Monday"
                                SelectionMode="SingleDate" />
                        </StackPanel>
                    </materialDesign:Card>

                    <!--  Thông tin ca trực  -->
                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                        <materialDesign:Card Margin="0,0,0,16" Padding="16">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,16"
                                    FontWeight="Bold"
                                    Text="Thông tin ca trực hôm nay" />
                                <StackPanel Margin="8">
                                    <Border
                                        Padding="12"
                                        Background="{DynamicResource PrimaryHueLightBrush}"
                                        CornerRadius="4">
                                        <StackPanel>
                                            <TextBlock FontWeight="Medium" Text="Ca sáng (06:00 - 14:00)" />
                                            <TextBlock
                                                FontSize="12"
                                                Opacity="0.8"
                                                Text="Nguyễn Văn A" />
                                        </StackPanel>
                                    </Border>
                                    <Border
                                        Padding="12"
                                        Background="{DynamicResource SecondaryHueLightBrush}"
                                        CornerRadius="4">
                                        <StackPanel>
                                            <TextBlock FontWeight="Medium" Text="Ca chiều (14:00 - 22:00)" />
                                            <TextBlock
                                                FontSize="12"
                                                Opacity="0.8"
                                                Text="Trần Thị B" />
                                        </StackPanel>
                                    </Border>
                                    <Border
                                        Padding="12"
                                        Background="{DynamicResource MaterialDesignDivider}"
                                        CornerRadius="4">
                                        <StackPanel>
                                            <TextBlock FontWeight="Medium" Text="Ca đêm (22:00 - 06:00)" />
                                            <TextBlock
                                                FontSize="12"
                                                Opacity="0.8"
                                                Text="Lê Văn C" />
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </materialDesign:Card>

                        <materialDesign:Card Padding="16">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,16"
                                    FontWeight="Bold"
                                    Text="Chức năng" />
                                <StackPanel Margin="8">
                                    <Button HorizontalAlignment="Stretch" Style="{StaticResource MaterialDesignRaisedButton}">
                                        <TextBlock Text="Tạo lịch trực mới" />
                                    </Button>
                                    <Button HorizontalAlignment="Stretch" Style="{StaticResource MaterialDesignOutlinedButton}">
                                        <TextBlock Text="Chỉnh sửa lịch" />
                                    </Button>
                                    <Button HorizontalAlignment="Stretch" Style="{StaticResource MaterialDesignOutlinedButton}">
                                        <TextBlock Text="Xuất lịch PDF" />
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </Grid>
            </TabItem>

        </TabControl>

        <!--  Footer  -->
        <materialDesign:ColorZone
            Grid.Row="2"
            Grid.ColumnSpan="3"
            Padding="16"
            VerticalAlignment="Center"
            Mode="PrimaryDark">
            <DockPanel>
                <TextBlock
                    VerticalAlignment="Center"
                    DockPanel.Dock="Left"
                    Text="© 2024 Hệ thống quản lý" />
                <TextBlock
                    VerticalAlignment="Center"
                    DockPanel.Dock="Right"
                    Text="Phiên bản 1.0.0 | Kết nối: Online" />
            </DockPanel>
        </materialDesign:ColorZone>
    </Grid>
</Window>